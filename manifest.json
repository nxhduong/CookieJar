{
    "manifest_version": 3,
    "name": "Cookie Jar",
    "description": "Keep all cookies indefinitely",
    "version": "1.0",
    "action": {
        "default_popup": "main.html",
        "default_icon": "icon.png"
    },
    "content_scripts": [
        {
            "js": [
                "scripts/main.js"
            ]
        }
    ],
    "background": {
        "service_worker": "background.js"
    }
}